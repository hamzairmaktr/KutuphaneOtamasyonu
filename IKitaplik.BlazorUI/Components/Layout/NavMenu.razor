<MudDrawerHeader>
    <MudText Typo="Typo.h6">IKitaplik</MudText>
</MudDrawerHeader>
<MudNavMenu>
    <AuthorizeView>
        <Authorized>
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">
                Anasayfa
            </MudNavLink>
            <MudNavGroup Title="Kitaplar" Icon="@Icons.Material.Filled.Book">
                <MudNavLink Href="/books/add">
                    <MudIcon Icon="@Icons.Material.Filled.Add" />
                    Kitap Ekle
                </MudNavLink>
                <MudNavLink Href="/books/list">
                    <MudIcon Icon="@Icons.Material.Filled.List" />
                    Kitap Listele
                </MudNavLink>
            </MudNavGroup>
            <MudNavGroup Title="Kategori" Icon="@Icons.Material.Filled.Category">
                <MudNavLink Href="/category/add">
                    <MudIcon Icon="@Icons.Material.Filled.Add" />
                    Kategori Ekle
                </MudNavLink>
                <MudNavLink Href="/category/list">
                    <MudIcon Icon="@Icons.Material.Filled.List" />
                    Kategori Listele
                </MudNavLink>
            </MudNavGroup>
        </Authorized>
        <NotAuthorized>
            <MudNavLink Href="/login" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Login">Giriş Yap</MudNavLink>
            <MudNavLink Href="/register" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.AppRegistration">Kayıt Ol</MudNavLink>
        </NotAuthorized>
    </AuthorizeView>
</MudNavMenu>
