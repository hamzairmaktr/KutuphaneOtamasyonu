@page "/login"
@inject IAuthService _authService

<MudForm>
    <MudText Typo="Typo.h4" Class="mt-4">Giriş Yap</MudText>
    @if (errorMessage != null)
    {
        <MudAlert Class="mt-3 mb-3" Severity="Severity.Error">@errorMessage</MudAlert>
    }
    <MudTextField Class="mt-2" Label="Kullanıcı Adı" @bind-Value="username" InputType="InputType.Text" Required="true" RequiredError="Kullanıcı adı gereklidir." />
    <MudTextField Class="mt-2" Label="Şifre" @bind-Value="password" InputType="InputType.Password" Required="true" RequiredError="Şifre gereklidir." />
    <MudButton Class="mt-2" Variant="Variant.Filled" Color="Color.Primary" OnClick="@LoginOl">Giriş Yap</MudButton>

</MudForm>

@code {
    string username = string.Empty;
    string password = string.Empty;
    string? errorMessage = null;

    private async Task LoginOl()
    {
        UserLoginDto loginDto = new UserLoginDto
        {
            Username = username,
            Password = password
        };
        var res = await _authService.Login(loginDto);
        if (!res.Success)
            errorMessage = res?.Message ?? "Giriş yapılamadı.";
    }
}